<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rr_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_groups"
            android:drawablePadding="@dimen/dimen_ten"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_ten"
            android:text="My Groups"
            android:textColor="@color/text_color_secondary"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_notification_label"
            android:layout_alignRight="@+id/tv_notification_label"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/tv_followed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_toRightOf="@+id/view_divider"
            android:padding="@dimen/dimen_ten"
            android:text="Joined" />

        <View
            android:id="@+id/view_divider2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view_divider"
            android:layout_alignRight="@+id/tv_followed"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_ten"
            android:layout_toRightOf="@+id/view_divider2"
            android:text="All" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rr_top"
        android:background="@color/color_bgsidenav" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/dimen_ten"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/color_orange"
        android:pointerIcon="all_scroll"
        android:src="@android:drawable/ic_input_add"
        />
</RelativeLayout>
