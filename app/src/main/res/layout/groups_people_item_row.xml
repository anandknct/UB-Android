<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_icons"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user_profile_def" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_ten"
        android:paddingRight="@dimen/dimen_ten">

        <TextView
            android:id="@+id/tv_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cb_user_selection"
            android:layout_toStartOf="@+id/cb_user_selection"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="3"
            android:text="Agape Christian church"
            android:textColor="@color/text_color_primary"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/cb_user_selection"
            android:theme="@style/MyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_header_txt"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_five"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat" />


    </RelativeLayout>


</LinearLayout>