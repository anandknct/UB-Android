<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout" />

    <View
        android:id="@id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar_layout"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_marginBottom="@dimen/dimen_ten"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dimen_ten"
        android:text="@string/str_my_friends"
        android:drawableLeft="@drawable/ic_my_friends"
        android:drawablePadding="@dimen/dimen_ten"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_primary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:id="@id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_about"
        android:background="@color/divider_color" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_friends"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_ten"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/divider2"
            android:layout_height="match_parent"/>

</RelativeLayout>
