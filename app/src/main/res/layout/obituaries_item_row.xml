<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_ten"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_icons"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ubitauries_def_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:layout_marginRight="@dimen/dimen_ten">

        <TextView
            android:id="@+id/tv_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Helen jakes"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_txt"
            android:layout_marginTop="@dimen/dimen_five"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="January, 6-1885 - March,25 - 2017"
            android:textColor="@color/text_color_secondary"
            android:textSize="14sp" />




    </RelativeLayout>


</LinearLayout>