<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Edit Text Style-->
    <style name="edit_text_height">
        <item name="android:layout_height">38dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Edit Text Style-->
    <style name="margin">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Header Theme -->
    <style name="Header" parent="Theme.AppCompat.Light">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="newDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/text_color_secondary</item>
        <item name="colorControlActivated">@color/text_color_primary</item>
        <item name="colorControlNormal">@color/text_color_primary</item>

    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <!--Default Checkbox style-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/checkbox_uncheck_color</item>
        <item name="colorControlActivated">@color/checkbox_color</item>
    </style>

    <!--Custom Alert Dialog Animation style-->
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!--Airplane mode in  utils dialog theme-->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert"><!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
