<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_wedding_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="@dimen/dimen_ten"
                android:scaleType="fitXY"
                android:src="@drawable/ubitauries_def_image" />

            <LinearLayout
                android:id="@+id/ll_image_view_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_wedding_image"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_ten"
                    android:scaleType="fitXY"
                    android:src="@drawable/wedding_def_2" />

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_ten"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubitauries_def_image" />

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_ten"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubitauries_def_image" />

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_ten"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubitauries_def_image" />

                <ImageView
                    android:id="@+id/iv_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/dimen_ten"
                    android:scaleType="fitXY"
                    android:src="@drawable/ubitauries_def_image" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_image_view_list"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/dimen_five">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_edit"
                    android:layout_toStartOf="@+id/tv_edit"
                    android:maxLines="6"
                    android:text=""
                    android:textColor="@color/text_color_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/tv_event_time"
                    android:maxLines="6"
                    android:text="Edit"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/dimen_five"
                    android:gravity="left"
                    android:text="Date : 21 March 2015"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text="Description here"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_parents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_description"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text="Parents"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_bridemf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_parents"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text="Mother &amp; Father of Bride : "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_groommf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bridemf"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text="Mother &amp; Father of Groom : "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_groommf"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text="Time : 5:20 PM"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginTop="@dimen/dimen_ten"
                    android:gravity="left"
                    android:text=""
                    android:textSize="12sp" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/tv_location"
                    android:layout_marginBottom="@dimen/dimen_ten"
                    android:layout_marginTop="@dimen/dimen_ten"
                    map:cameraZoom="4" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
