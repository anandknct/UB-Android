<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_five"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_icons"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user_comment_def" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:layout_marginRight="@dimen/dimen_ten"
        android:layout_marginTop="@dimen/dimen_fifteen">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout">

            <TextView
                android:id="@+id/tv_header_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/text_color_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header_txt"
                android:layout_marginTop="@dimen/dimen_three"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_color_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mutuals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address_1"
                android:layout_marginTop="@dimen/dimen_three"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_color_secondary"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_accept"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="#FF0000"
                android:textSize="@dimen/dimen_twelve"
                android:padding="@dimen/dimen_ten"
                android:text="@string/str_unblock"
                android:textColor="@color/color_white" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>