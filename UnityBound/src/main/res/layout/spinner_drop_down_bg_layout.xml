<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#724D9D"
    android:padding="@dimen/dimen_ten">

    <ImageView
        android:id="@+id/iv_spinner_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:src="@drawable/ic_all_types"
        android:tint="@color/text_color_primary" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:gravity="left"
        android:text="All Types"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_ten" />

</LinearLayout>
