<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_ten">

    <ImageView
        android:id="@+id/iv_user_icons"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ubitauries_def_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/iv_user_icons"
        android:layout_alignBaseline="@+id/iv_user_icons"
        android:layout_marginTop="@dimen/dimen_five"
        android:layout_marginLeft="@dimen/dimen_ten"
        android:layout_marginRight="@dimen/dimen_ten">

        <TextView
            android:id="@+id/tv_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="Helen jakes"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_txt"
            android:layout_marginTop="@dimen/dimen_three"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="January, 6-1885 - March,25 - 2017"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/tv_description"
            android:background="@drawable/ic_obituary_flower" />


    </RelativeLayout>


</RelativeLayout>