<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_loginwith"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:gravity="center|left"
            android:text="Login with"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_loginwith"
            android:layout_weight="0.60">

            <ImageView
                android:id="@+id/iv_fbicon"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/iv_fbicon" />

            <ImageView
                android:id="@+id/iv_googleicon"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/iv_googleicon" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:src="@drawable/iv_twitter"
                android:visibility="gone" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
