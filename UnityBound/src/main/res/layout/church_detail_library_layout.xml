<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ll_libraryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_libraryList"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/edt_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_marginTop="@dimen/dimen_ten"
            android:layout_toLeftOf="@+id/btn_attach"
            android:layout_toStartOf="@+id/btn_attach"
            android:background="@drawable/edit_text_black_border"
            android:gravity="center_vertical"
            android:hint="Tittle"
            android:padding="@dimen/dimen_five"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_upload_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_tittle"
            android:layout_marginRight="@dimen/dimen_ten"
            android:layout_marginTop="@dimen/dimen_ten"
            android:focusable="false"
            android:clickable="false"
            android:layout_toLeftOf="@+id/btn_attach"
            android:layout_toStartOf="@+id/btn_attach"
            android:background="@drawable/edit_text_black_border"
            android:gravity="center_vertical"
            android:hint="Upload"
            android:padding="@dimen/dimen_five"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_attach"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_upload_tittle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/edt_upload_tittle"
            android:background="@color/color_orange"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_ten"
            android:paddingRight="@dimen/dimen_ten"
            android:text="Attach" />
    </RelativeLayout>

</RelativeLayout>
